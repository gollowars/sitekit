$slideMenuEase = ease
$slideMenuDuration = .35s
.slidemenu-fixed
  // position: fixed
  overflow: hidden
  
.slidemenu-nav
  position: fixed
  top: 0
  left: 100%
  width: 100%
  height: 100%
  overflow: hidden
  transition: all $slideMenuDuration $slideMenuEase 0s 
  z-index: 5
  pointer-events : none
  &--active
    left: 0%
    pointer-events : auto
  

  &--opa
    opacity: 0
    left: 0%
    transition: all $slideMenuDuration $slideMenuEase 0s 
    transform: scale(0.95,0.95)

  &--opa&--active
    opacity: 1.0
    transform: scale(1.0,1.0)
    
  &__inner
    position: relative
    height: 100%
    overflow-y: scroll
    overflow-scrolling: touch
    -webkit-overflow-scrolling: touch
  &__bglayer
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow: hidden