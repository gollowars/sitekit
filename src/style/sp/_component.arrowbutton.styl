.arrow-button
  position: relative
  padding: 0 35px 12px 8px

  &:before
    content: ''
    position: absolute
    display: block
    width: 100%
    height: 1px
    background-color: #000
    left: 0
    bottom: 0
  
  &:after
    $arrowRight()
    content: ''
    position: absolute
    display: block
    right: 6px
    transform: translate(0, -100%)