  letter-spacing: .1em

gradationButtonStylePC()
  line-height: 52px
  color: #fff
  font-size: 14px
  letter-spacing: .1em


rainbowMask(w,h,url)
  display: inline-block
  text-align: center
  width: (w)px
  height: (h)px
  background: linear-gradient(90deg, #2d887b, #c9802e, #af4e76, #2d887b, #c9802e, #af4e76, #af4e76, #c9802e,#2d887b)
  background-size: 200%
  mask-image: url(url)
  mask-size: 100% 100%
  animation: rainbowAnim .9s ease 0s infinite normal
  transition: all


@keyframes rainbowAnim
  0%
    opacity: 1.0
    background-position: 0% 50%
    transform: scale(1.0)
  50%
    opacity: 0.4
    transform: scale(1.01)
  100%
    opacity: 1.0
    background-position: 200% 50%
    transform: scale(1.0)
    