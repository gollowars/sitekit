gradientMask(w,h,url,c1,c2,delay = 2s)
  display: inline-block
  text-align: center
  width: (w)px
  height: (h)px
  background: linear-gradient(90deg, c1, c2, c1)
  background-size: 300%
  background-position: 300% 50%
  mask-image: url(url)
  mask-size: 100% 100%
  animation: maskBtnAnim 5.0s ease delay infinite normal
  transition: all

@keyframes maskBtnAnim
  0%
    background-position: 300% 50%
  100%
    background-position:0% 50%


gradientMaskSlant(w,h,url,c1,c2,delay = 2s)
  display: inline-block
  text-align: center
  width: (w)px
  height: (h)px
  background: linear-gradient(45deg, c1, c2, c1)
  background-size: 200%
  background-position: 0% 50%
  mask-image: url(url)
  mask-size: 100% 100%
  animation: maskBtnAnim 5.0s ease delay infinite normal
  transition: all

@keyframes maskBtnAnim
  0%
    background-position: 200% 50%
  100%
    background-position: 0% 50%


gradationButtonStyle()
