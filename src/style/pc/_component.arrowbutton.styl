.arrow-button
  position: relative
  padding: 0 25px 12px 8px
  
  &:hover
    text-decoration: none
    opacity: 0.6
  
  &:before
    content: ''
    position: absolute
    display: block
    width: 100%
    height: 1px
    background-color: #000
    left: 0
    bottom: 0
  
  &:after
    $arrowRight()
    content: ''
    position: absolute
    display: block
    right: 6px
    top: 1px
    transition: all .25s ease 0

